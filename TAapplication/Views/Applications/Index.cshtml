@using Microsoft.AspNetCore.Identity
@using TAapplication.Areas.Data
@using TAapplication.Data;
@inject UserManager<TAUser> UserManager
@inject RoleManager<IdentityRole> roleManager
@inject ApplicationDbContext db_context

@{
    ViewData["Title"] = "Index";
    var apps = db_context.Application.ToArray();
    int total_apps = db_context.Application.ToArray().Length; // will display on the page
    float total_gpa = 0;
    float avg_gpa = 0; // Will display on the page
    foreach(var ap in apps)
    {
        total_gpa = ap.GPA + total_gpa;
    }
    avg_gpa = total_gpa / total_apps;
}


<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="author" content="Htet Naing" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teaching Assistant Application Index Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
          rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
          crossorigin="anonymous">
</head>
<body>
    <div class="card bg-info">
        <div class="card-header">
            Summary of Applicants
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Total number of applicants : @total_apps</li>
            <li class="list-group-item">Average GPA of applicants : @avg_gpa</li>
        </ul>
    </div>
</body>
