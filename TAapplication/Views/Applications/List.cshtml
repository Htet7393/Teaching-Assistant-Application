@model IEnumerable<TAapplication.Models.Application>

@{
    ViewData["Title"] = "List";
}

@section Styles
{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="List.css" />
}

@section Scripts
    {
    <script type="text/javascript" charset="utf8" src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="~/js/list.js" type="text/javascript"></script>
}


<div class="card bg-info" style="text-align:center">
    <h1 style="color:darkblue">Applicants List</h1>
</div>

<br>

<table id="table" class="display" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pursuing)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GPA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Availability)
            </th>
            <th>
                Modified
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">@item.User.Name</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pursuing)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GPA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Availability)
            </td> 
            <td>
                @item.ModificationDate
                @item.ModifiedBy
            </td>
        </tr>
}
    </tbody>
</table>
